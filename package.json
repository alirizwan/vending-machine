{
  "name": "vending-machine",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel --filter @apps/auth --filter @apps/payment --filter @apps/vending-machine --filter @apps/web dev",
    "build": "pnpm -r --filter @apps/* run build",
    "typecheck": "pnpm -r --filter @apps/* run typecheck",
    "lint": "eslint . --ext .ts",
    "db:generate": "pnpm -r --filter @apps/vending-machine exec prisma generate",
    "db:migrate": "pnpm -r --filter @apps/vending-machine exec prisma migrate dev --name init",
    "seed": "pnpm -r --filter @apps/vending-machine run seed",
    "dev:all": "pnpm run db:generate && pnpm run db:migrate && pnpm run seed && pnpm run dev",
    "dev:web": "pnpm -F @apps/web dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.12.12",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.43.0",
    "vitest": "^2.0.5"
  }
}
